# Production Environment Variables for VPS Deployment
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# Database Configuration
# For DigitalOcean Managed Database:
POSTGRES_HOST=your-digitalocean-db-host.db.ondigitalocean.com
POSTGRES_PORT=25060
POSTGRES_DB=defaultdb
POSTGRES_USER=doadmin
POSTGRES_PASSWORD=YOUR_DIGITALOCEAN_DB_PASSWORD
POSTGRES_SSL_MODE=Require

# For Local PostgreSQL (comment out above and uncomment below):
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=evsrs_production
# POSTGRES_USER=evsrs_user
# POSTGRES_PASSWORD=YOUR_LOCAL_DB_PASSWORD
# POSTGRES_SSL_MODE=Disable

# JWT Settings (Generate new secure keys for production!)
JWT_ISSUER=EVSRS-Production
JWT_AUDIENCE=EVSRS-API
JWT_SECRET_KEY=YOUR_VERY_LONG_AND_SECURE_JWT_SECRET_KEY_HERE_AT_LEAST_32_CHARACTERS
JWT_ACCESS_TOKEN_EXPIRATION=60
JWT_REFRESH_TOKEN_EXPIRATION=7

# Cloudinary (Image/File Storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Settings (Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_API_BASE_URI=https://api.mailgun.net
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com
MAILGUN_FROM_NAME=EVSRS System

# Payment Gateway (Sepay)
SEPAY_API_KEY=your-sepay-api-key
SEPAY_API_BASE_URI=https://qr.sepay.vn/img
SEPAY_ACCOUNT_NUMBER=your-account-number
SEPAY_ACCOUNT_NAME=your-account-name
SEPAY_BANK_CODE=your-bank-code

# Contentful CMS
CONTENTFUL_SPACE_ID=your-contentful-space-id
CONTENTFUL_CONTENT_DELIVERY_KEY=your-contentful-delivery-key
CONTENTFUL_ENTRY_ID=your-contentful-entry-id
CONTENTFUL_SECRET_KEY=your-contentful-secret-key
CONTENTFUL_MANAGEMENT_TOKEN=your-contentful-management-token

# GHTK Delivery Service
GHTK_API_TOKEN=your-ghtk-api-token
GHTK_BASE_URI=https://services.giaohangtietkiem.vn

# AI Service (Groq)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=500